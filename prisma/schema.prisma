generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./prisma/dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String   @default("END_USER")
  createdAt DateTime @default(now()) @map("created_at")

  tickets         Ticket[]         @relation("UserTickets")
  assignedTickets Ticket[]         @relation("AssignedTickets")
  assets         Asset[]           @relation("UserAssets")
  softwareLicenses SoftwareLicense[] @relation("UserSoftwareLicenses")

  @@map("users")
}

model Ticket {
  id          String       @id @default(cuid())
  title       String
  description String
  priority    String       @default("MEDIUM")
  category    String
  status      String       @default("OPEN")
  userId      String       @map("user_id")
  assignedTo  String?      @map("assigned_to")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  user        User         @relation("UserTickets", fields: [userId], references: [id])
  assignedUser User?       @relation("AssignedTickets", fields: [assignedTo], references: [id])

  @@map("tickets")
}

model Asset {
  id              String      @id @default(cuid())
  name            String
  type            String
  serialNumber    String?     @unique @map("serial_number")
  status          String      @default("AVAILABLE")
  assignedUserId  String?     @map("assigned_user_id")
  purchaseDate    DateTime?   @map("purchase_date")
  createdAt       DateTime    @default(now()) @map("created_at")

  assignedUser   User?        @relation("UserAssets", fields: [assignedUserId], references: [id])

  @@map("assets")
}

model SoftwareLicense {
  id              String    @id @default(cuid())
  name            String
  vendor          String
  licenseKey      String    @unique @map("license_key")
  expiryDate      DateTime? @map("expiry_date")
  assignedUserId  String?   @map("assigned_user_id")
  createdAt       DateTime  @default(now()) @map("created_at")

  assignedUser   User?        @relation("UserSoftwareLicenses", fields: [assignedUserId], references: [id])

  @@map("software_licenses")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  type      String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("categories")
}


